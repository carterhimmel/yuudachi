		"@vitejs/plugin-react": "^4.0.4",
		"@vitest/coverage-v8": "^0.34.3",
		"concurrently": "^8.2.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.48.0",
		"eslint-config-neon": "^0.1.56",
		"eslint-formatter-pretty": "^5.0.0",
		"happy-dom": "^10.11.0",
		"prettier": "^3.0.2",
		"prettier-plugin-tailwindcss": "^0.5.3",
		"tsconfig": "workspace:^",
		"typescript": "^5.2.2",
		"unocss": "^0.55.3",
		"vitest": "^0.34.3"
	},
